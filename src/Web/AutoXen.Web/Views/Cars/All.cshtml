@model IEnumerable<CarViewModel>

<div class="col text-center">
    <a asp-controller="Cars" asp-action="Add" class="btn btn-outline-primary text-center">Add car</a>
</div>
<p><br /></p>

@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Registration Number</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.RegistrationPlate</td>
                <td><a class="btn btn-outline-info" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id">Details</a></td>
                <td><a class="btn btn-outline-danger" asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" onclick="return confirm('Are you sure you want to delete your car');">Delete</a></td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-danger">You have no cars</p>
}
