                    <i class="fas fa-info-circle"></i>
                    <h3><a asp-controller="Home" asp-action="About" asp-area="">About</a></h3>
                </div>
            </div>
            @if (this.SignInManager.IsSignedIn(this.User))
            {
                <div class="col-xl-2 col-md-4 col-6">
                    <div class="icon-box">
                        <i class="fas fa-car"></i>
                        <h3><a asp-controller="Cars" asp-action="All" asp-area="">My cars</a></h3>
                    </div>
                </div>
                <div class="col-xl-2 col-md-4 col-6 ">
                    <div class="icon-box">
                        <i class="fas fa-people-carry"></i>
                        <h3><a asp-controller="Requests" asp-action="Index" asp-area="">My requests</a></h3>
                    </div>
                </div>
            }
            else
            {
                <div class="col-xl-2 col-md-4 col-6 mt-4 mt-md-0">
                    <div class="icon-box">
                        <i class="fas fa-registered"></i>
                        <h3><a asp-area="Identity" asp-page="/Account/Register"> Register</a></h3>
                    </div>
                </div>
                <div class="col-xl-2 col-md-4 col-6 mt-4 mt-xl-0">
                    <div class="icon-box">
                        <i class="fas fa-sign-in-alt"></i>
                        <h3><a asp-area="Identity" asp-page="/Account/Login"> Login</a></h3>
                    </div>
                </div>
            }
        </div>
    </div>
