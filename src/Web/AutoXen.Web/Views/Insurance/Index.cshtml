@using AutoXen.Services.Data
@using AutoXen.Web.ViewModels.Insurance
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject ICarWashService washService
@model InsuranceRequestViewModel

<form method="post" class=" d-flex justify-content-center">
    <div class="row mt-2 container">
        <div class="col-md-8">
            <div asp-validation-summary="All" class="text-danger"></div>

            <partial name="_CarsPartial" model="@Model.CarId" />

            <div class="form-row">
                <div class="text-center col-lg-6">
                    <label class="col-form-label">@Localizer["Insurances"]</label>
                    <select class="form-control input-group js-select-multiple" multiple data-placeholder="@Localizer["SelectOption"]">
                        <option>Casco</option>
                        <option>Third Party Liability</option>
                        <option>Accident in places</option>
                        <option>Car assistance for Bulgaria</option>
                        <option>Car assistance for Europe</option>
                        <option>Insurance of passengers in public transport (SOP/СОП)</option>
                    </select>
                </div>

                <div class="text-center col-lg-6">
                    <label class="col-form-label">@Localizer["Company"]</label>
                    <select class="form-control input-group">
                        <option>Company 1</option>
                        <option>Company 2</option>
                    </select>
                </div>
            </div>

            <div class="form-row mt-2">
                <div class="text-center col-lg-5">
                    <label class="col-form-label">@Localizer["StartDate"]</label>
                    <input class="form-control input-group" type="datetime-local" />
                </div>

                <div class="text-center col-lg-5">
                    <label class="col-form-label">@Localizer["EndDate"]</label>
                    <input class="form-control input-group" type="datetime-local" />
                </div>

                <div class="col-lg-2 d-flex justify-content-center">
                    <div class="mt-lg-0 mt-2 col-lg-12 col-md-6 col-sm-6 col-8">
                        <label class="col-form-label text-center">@Localizer["Payments"]</label>
                        <select class="form-control input-group">
                            <option>1</option>
                            <option>2</option>
                            <option>4</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center text-center">

            </div>

            <div class="row mt-3">
                <div class="col text-center">
                    <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
                </div>
            </div>
        </div>

        <partial name="_MessagePartial" model="@Model.Message" />
    </div>
</form>