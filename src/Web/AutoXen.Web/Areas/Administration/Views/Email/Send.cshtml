@using AutoXen.Web.ViewModels.Administration.Email
@model EmailViewModel

<div class="mt-4 pb-2 d-flex justify-content-center">
    <div class="container">
        <form method="post">
            <div class="text-center">
                <label class="h3">@Model.RequestName</label>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-2">
                <label class="col-form-label" asp-for="Receiver"></label>
                <input class="form-control" asp-for="Receiver" value="receiver.auto.xen@gmail.com" />
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label class="col-form-label" asp-for="Subject"></label>
                <input class="form-control" asp-for="Subject" value="@Model.RequestName" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="col-form-label" asp-for="Message"></label>
                <textarea class="form-control" rows="12" asp-for="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <input hidden disabled asp-for="Id"/>
            <input hidden disabled asp-for="RequestName" />
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
